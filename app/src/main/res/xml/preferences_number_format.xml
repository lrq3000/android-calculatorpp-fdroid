<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.ListPreference
        android:key="engine.output.notation"
        android:title="@string/cpp_format"/>

    <org.solovyev.android.calculator.preferences.PrecisionPreference
        android:key="engine.output.precision"
        android:title="@string/cpp_precision" />

    <androidx.preference.ListPreference
        android:entries="@array/cpp_thousands_separator_names"
        android:entryValues="@array/cpp_thousands_separators"
        android:key="engine.output.separator"
        android:title="@string/cpp_thousands_separator" />

    <org.solovyev.android.calculator.preferences.NumberFormatExamplesPreference
        android:key="numberFormat.examples"
        android:selectable="false"
        android:title="@string/cpp_examples" />

</PreferenceScreen>
