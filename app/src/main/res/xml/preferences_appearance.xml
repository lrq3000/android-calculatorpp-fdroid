<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:m="http://schemas.android.com/apk/res-auto">

    <androidx.preference.ListPreference
        android:key="gui.language"
        android:title="@string/cpp_language" />

    <androidx.preference.CheckBoxPreference
        android:key="gui.vibrateOnKeypress"
        android:title="@string/cpp_prefs_vibrate_on_keypress" />

    <androidx.preference.ListPreference
        android:key="gui.theme"
        android:title="@string/cpp_theme" />

    <androidx.preference.CheckBoxPreference
        android:key="gui.highContrast"
        android:title="@string/cpp_high_contrast_text" />

    <androidx.preference.CheckBoxPreference
        android:defaultValue="true"
        android:key="gui.rotateScreen"
        android:title="@string/cpp_prefs_auto_rotate_screen" />

    <androidx.preference.CheckBoxPreference
        android:key="gui.keepScreenOn"
        android:title="@string/cpp_prefs_keep_screen_on" />

</PreferenceScreen>
