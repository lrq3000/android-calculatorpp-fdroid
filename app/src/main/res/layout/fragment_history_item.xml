<LinearLayout
    style="@style/CppListItem.TwoLines"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <TextView
        android:id="@+id/history_item_value"
        style="@style/CppListItemText.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2" />

    <TextView
        android:id="@+id/history_item_comment"
        style="@style/CppListItemText.Secondary.OneLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/history_item_time"
        style="@style/CppListItemText.Secondary.OneLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_text_size_small"
        android:gravity="center_vertical|end"/>
</LinearLayout>
