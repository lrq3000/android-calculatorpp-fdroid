<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/function_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/function_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cpp_name"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <org.solovyev.android.calculator.functions.FunctionParamsView
        android:id="@+id/function_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/function_body_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <org.solovyev.android.calculator.view.EditTextCompat
            android:id="@+id/function_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cpp_function_body"
            android:imeOptions="flagNoExtractUi"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/function_description_label">

        <EditText
            android:id="@+id/function_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cpp_description"
            android:inputType="textMultiLine"
            android:maxLines="4" />
    </com.google.android.material.textfield.TextInputLayout>

</merge>

