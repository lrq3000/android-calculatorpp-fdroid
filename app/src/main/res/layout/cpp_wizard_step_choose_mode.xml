<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/WizardLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/cpp_wizard_mode_title"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <Spinner
        android:id="@+id/wizard_mode_spinner"
        style="@style/WizardLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="?attr/cpp_editor_bg"
            android:padding="3dp">

            <org.solovyev.android.views.dragbutton.DirectionDragButton
                android:id="@+id/wizard_mode_button"
                style="?attr/cpp_button_style_operation"
                android:layout_width="@dimen/cpp_wizard_preview_button_size"
                android:layout_height="@dimen/cpp_wizard_preview_button_size"
                android:text="7"
                tools:ignore="HardcodedText" />
        </FrameLayout>

        <TextView
            android:id="@+id/wizard_mode_description"
            style="@style/WizardLabel.Last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
